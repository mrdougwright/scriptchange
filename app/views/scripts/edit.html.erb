<h1>Edit Script Details</h1>

<div class='form'>
  <%= form_for @script, url: script_path(@script), html: { multipart: true } do |form| %>
    <div class='field'>
      Title: <%= form.text_field :title, required: true %>
    </div>
    <div class='field'>
      Tagline: <%= form.text_field :tagline %>
    </div>
    <div class='field'>
      Summary: <%= form.text_area :summary %>
    </div>
    <div class='actions'>
      <%= form.submit data: { disable_with: "One moment..." } %>
    </div>
  <% end %>
</div>