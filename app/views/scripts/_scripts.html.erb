<h2><%= header %></h2>

<table class="script-table">
  <thead>
    <th>Title</th>
    <th>Author(s)</th>
    <th>Uploaded On</th>
    <th>Genre</th>
    <th>Views</th>
    <th>Fans</th>
    <th>Ave Rating</th>

  </thead>
  <% scripts.each do |script| %>
    <tbody>
      <tr>
        <td><%= link_to script.title, script %></td>
        <td>
          <% script.authors.pluck(:name).each do |name| %>
            <%= name %>
          <% end %>
        </td>
        <td><%= Format::Date.simple(script.created_at) %></td>
        <td><%= script.genre %></td>
        <td><%= script.views %></td>
        <td><%= Star.where(script_id: script.id).count %></td>
        <td><%= CalculateRatings.ave_rating(script.id) %></td>
      </tr>
    </tbody>
  <% end %>
</table>