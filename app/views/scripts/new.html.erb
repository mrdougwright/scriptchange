<%= form_for @script, url: scripts_create_path, html: { multipart: true } do |form| %>
  Title: <%= form.text_field :title, required: true %><br>
  Tagline: <%= form.text_field :tagline %><br>
  Summary: <%= form.text_area :summary %><br>
  Genre: <%= form.select(:genre, options_for_select(Script::Genres)) %><br>
  <%= form.file_field :pdf %>
  <%= form.submit %>
<% end %>
